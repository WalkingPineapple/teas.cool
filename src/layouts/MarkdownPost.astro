---
import PostLayout from "./PostLayout.astro";

const { frontmatter } = Astro.props;
const { pubDate, title, description, heroImage, tags, updatedDate } = frontmatter;

// 获取文章内容用于计算阅读时间
const content = await Astro.slots.render('default');
---

<PostLayout
  title={title}
  description={description}
  pubDate={pubDate}
  updatedDate={updatedDate}
  heroImage={heroImage}
  tags={tags}
  content={content}
>
  <slot />
</PostLayout>
